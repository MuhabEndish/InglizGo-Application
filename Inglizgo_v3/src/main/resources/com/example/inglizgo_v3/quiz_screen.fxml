<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<AnchorPane fx:id="quizPane" prefHeight="650.0" prefWidth="1120.0" style="-fx-background-color: #1e242b;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.inglizgo_v3.QuizScreenController">
    <children>
        <!-- Flashcard VBox -->
        <VBox alignment="CENTER" layoutX="269.0" layoutY="217.0" prefHeight="245.0" prefWidth="581.0" spacing="20" style="-fx-background-color: #37404a; -fx-background-radius: 10; -fx-padding: 20;">
            <children>
                <!-- Question Label -->
                <Label fx:id="questionLabel" contentDisplay="CENTER" onMouseClicked="#handleShowAnswer" prefHeight="70.0" prefWidth="360.0" style="-fx-font-size: 24px; -fx-text-fill: white; -fx-wrap-text: true; -fx-cursor: hand;" text=" Tap to reveal" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>

          <!-- Back to Main Button -->
          <Button layoutX="880.0" layoutY="596.0" onAction="#handleBackToMain" prefHeight="40.0" prefWidth="111.0" style="-fx-background-color: #40a2e3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10;" text="Back to Main" />
    </children>
    <effect>
        <DropShadow color="#00000088" offsetX="5" offsetY="5" radius="5" />
    </effect>
</AnchorPane>
